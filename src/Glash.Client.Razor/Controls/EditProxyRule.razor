<div class="row">
    <div class="col-12">
        <EditForm Model="@Model" OnValidSubmit="Ok">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label>@Global.Instance.TextManager.GetText(Razor.Model.ProxyRule.Texts.Name)</label>
                <InputText class="form-control" @bind-Value="Model.Name" />
                <ValidationMessage For="@(() => Model.Name)" />
            </div>
            <div class="form-group">
                <label>@Global.Instance.TextManager.GetText(Razor.Model.ProxyRule.Texts.Agent)</label>
                <InputText class="form-control" @bind-Value="Model.Agent" readonly />
                <ValidationMessage For="@(() => Model.Agent)" />
            </div>
            <div class="form-group">
                <label>@Global.Instance.TextManager.GetText(Razor.Model.ProxyRule.Texts.LocalIPAddress)</label>
                <InputText class="form-control" @bind-Value="Model.LocalIPAddress" />
                <ValidationMessage For="@(() => Model.LocalIPAddress)" />
            </div>
            <div class="form-group">
                <label>@Global.Instance.TextManager.GetText(Razor.Model.ProxyRule.Texts.LocalPort)</label>
                <InputNumber class="form-control" @bind-Value="Model.LocalPort" />
                <ValidationMessage For="@(() => Model.LocalPort)" />
            </div>
            <div class="form-group">
                <label>@Global.Instance.TextManager.GetText(Razor.Model.ProxyRule.Texts.RemoteHost)</label>
                <InputText class="form-control" @bind-Value="Model.RemoteHost" />
                <ValidationMessage For="@(() => Model.RemoteHost)" />
            </div>
            <div class="form-group">
                <label>@Global.Instance.TextManager.GetText(Razor.Model.ProxyRule.Texts.RemotePort)</label>
                <InputNumber class="form-control" @bind-Value="Model.RemotePort" />
                <ValidationMessage For="@(() => Model.RemotePort)" />
            </div>
            <button type="submit" class="btn btn-primary col-sm-5 col-md-4 col-lg-2">@Global.Instance.TextManager.GetText(ClientTexts.Ok)</button>
        </EditForm>
    </div>
</div>